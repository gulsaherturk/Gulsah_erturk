@model BiletGuzergah







    <div class="container shadow" style="margin-bottom:100px; padding:10px 14px;">


        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://www.metroturizm.com.tr/Assets/images/slider/canakkale-slider2.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.metroturizm.com.tr/Assets/images/slider/emniyetKemeri.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="https://www.metroturizm.com.tr/Assets/images/slider/servisSlider.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>







        <div class="form-group" style="display:inline; margin:8px;">
            <form action="/home/index" class="form-inline">
                <select name="nereden" class="form-select form-select-lg mb-3" asp-items="@ViewBag.Sehirler" style="width:505px; height:53px;">
                    <option selected disabled>Nereden</option>
                </select>
                <i class="fas fa-long-arrow-alt-right" style="padding: 0px 20px; font-size: 22px;"></i>
                <select name="nereye" class="form-select form-select-lg mb-3" asp-items="@ViewBag.Sehirler" style="width:505px; height:53px;">
                    <option selected disabled>nereye</option>
                </select>
                <button type="submit" class="btn btn-danger btn-lg btn-block"> Yolculuk bul</button>

            </form>

        </div>
        @if (Model.Guzergahs != null)
        {
            <div class="row">
                @foreach (var item in Model.Guzergahs)
                {
                    <div class="col-md-6">
                        @await Html.PartialAsync("_yolculuk", item)
                    </div>

                }
            </div>


        }
        else
        {
    <div class="row">
       
            <div class="col-md-12">
                @await Html.PartialAsync("_noyolculuk")
            </div>
        


    </div>
        }

    </div>