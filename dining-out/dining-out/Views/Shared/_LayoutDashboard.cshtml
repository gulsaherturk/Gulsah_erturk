<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"] - Dining Out</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/simple-sidebar.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
</head>

<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading text-primary">Dining-Out</div>
            <div class="list-group list-group-flush">
                <a asp-area="" asp-controller="DashboardAnasayfa" asp-action="Index" class="list-group-item list-group-item-action bg-light">Masa Rezervasyonları</a>
                @if (User.IsInRole("RESTAURANT"))
                {
                    <a asp-area="" asp-controller="DashboardSiparisler" asp-action="Index" class="list-group-item list-group-item-action bg-light">Siparişler</a>
                    <a asp-area="" asp-controller="DashboardRestaurant" asp-action="Index" class="list-group-item list-group-item-action bg-light">Restaurantlar</a>
                }
                <a href="#" class="list-group-item list-group-item-action bg-light">Profil</a>
                <a href="#" class="list-group-item list-group-item-action bg-light"></a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Menü(-/+)</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Anasayfa" asp-action="Index">Restaurant Araması <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" asp-controller="Login" asp-action="CikisYap">Çıkış</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                <p>@RenderBody()</p>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

    <footer class="border-top footer text-muted">
        <br />
        <div class="container">
            &copy; 2021 - Dining Out - <a asp-area="" asp-controller="Anasayfa" asp-action="Privacy">Privacy</a>
        </div>
        <br />
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>

    <!-- Menu Toggle Script -->
    <script>$("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });</script>

</body>

</html>
