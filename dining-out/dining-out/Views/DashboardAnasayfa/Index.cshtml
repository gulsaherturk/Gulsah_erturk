@model DashboardAnasayfaVM

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Dashboard - Anasayfa";
}

<br />
<div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="new-rez" data-toggle="tab" href="#newrez" role="tab" aria-controls="newrez" aria-selected="true">Yeni Rezervasyonlu Masalar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="active-rez" data-toggle="tab" href="#activerez" role="tab" aria-controls="activerez" aria-selected="false">Aktif Rezervasyonlu Masalar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="last-rez" data-toggle="tab" href="#lastrez" role="tab" aria-controls="lastrez" aria-selected="false">Geçmiş Rezervasyonlu Masalar</a>
        </li>
    </ul>
    <div class="tab-content text-center" id="myTabContent">
        <br/>
        <div class="tab-pane fade show active" id="newrez" role="tabpanel" aria-labelledby="new-rez-tab">
            <div class="shadow p-3 mb-5 bg-white rounded">
                @if (Model.BookTableNewRezervations != null && Model.BookTableNewRezervations.Count > 0)
                {
                    <table id="newrez-table" class="table table-striped table-bordered" style="width:95%">
                        <thead>
                            <tr>
                                <th>Rezervasyon Numarası</th>
                                <th>Rezervasyon Tarihi</th>
                                <th>Rezervasyon İsmi Soyismi</th>
                                <th>Rezervasyon Durumu</th>
                                <th>Rezervasyon Yapılan Restaurant</th>
                                <th>Rezervasyon Yapan Telefon</th>
                                <th>Rezervasyon Yapan E-Mail</th>
                                <th>Detay</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var rezervationVM in Model.BookTableNewRezervations)
                            {
                            <tr>
                                <td>@rezervationVM.Id</td>
                                <td>@rezervationVM.RezervationDate - @rezervationVM.RezervationTime</td>
                                <td>@rezervationVM.NameLastname</td>
                                <td>@rezervationVM.RezervationStatus</td>
                                <td>@rezervationVM.RestaurantName</td>
                                <td>@rezervationVM.PhoneNumber</td>
                                <td>@rezervationVM.Email</td>
                                <td>
                                    <a asp-controller="DashboardMasaRezervasyon"
                                       asp-action="Index"
                                       asp-route-masaRezervationId="@rezervationVM.Id">
                                        <i class="bi bi-arrow-right-circle-fill" style="font-size: 2rem; color: cornflowerblue;"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span class="text-primary">Kayıt Bulunmamaktadır</span>
                }
            </div>
        </div>
        <div class="tab-pane fade" id="activerez" role="tabpanel" aria-labelledby="active-rez-tab">
            <div class="shadow p-3 mb-5 bg-white rounded">
                @if (Model.BookTableActiveRezervations != null && Model.BookTableActiveRezervations.Count > 0)
                {
                    <table id="activerez-table" class="table table-striped table-bordered" style="width:95%">
                        <thead>
                            <tr>
                                <th>Rezervasyon Numarası</th>
                                <th>Rezervasyon Tarihi</th>
                                <th>Rezervasyon İsmi Soyismi</th>
                                <th>Rezervasyon Durumu</th>
                                <th>Rezervasyon Yapılan Restaurant</th>
                                <th>Rezervasyon Yapan Telefon</th>
                                <th>Rezervasyon Yapan E-Mail</th>
                                <th>Detay</th>

                        </thead>
                        <tbody>
                            @foreach (var rezervationVM in Model.BookTableActiveRezervations)
                            {
                                <tr>
                                    <td>@rezervationVM.Id</td>
                                    <td>@rezervationVM.RezervationDate - @rezervationVM.RezervationTime</td>
                                    <td>@rezervationVM.NameLastname</td>
                                    <td>@rezervationVM.RezervationStatus</td>
                                    <td>@rezervationVM.RestaurantName</td>
                                    <td>@rezervationVM.PhoneNumber</td>
                                    <td>@rezervationVM.Email</td>
                                    <td>
                                        <a asp-controller="DashboardMasaRezervasyon"
                                           asp-action="Index"
                                           asp-route-masaRezervationId="@rezervationVM.Id">
                                            <i class="bi bi-arrow-right-circle-fill" style="font-size: 2rem; color: cornflowerblue;"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                }
                else
                {
                    <span class="text-primary">Kayıt Bulunmamaktadır</span>
                }
                </div>
            </div>
            <div class="tab-pane fade" id="lastrez" role="tabpanel" aria-labelledby="last-rez-tab">
                <div class="shadow p-3 mb-5 bg-white rounded">
                    @if (Model.BookTableClosedRezervations != null && Model.BookTableClosedRezervations.Count > 0)
                    {
                        <table id="lastrez-table" class="table table-striped table-bordered" style="width:95%">
                            <thead>
                                <tr>
                                    <th>Rezervasyon Numarası</th>
                                    <th>Rezervasyon Tarihi</th>
                                    <th>Rezervasyon İsmi Soyismi</th>
                                    <th>Rezervasyon Durumu</th>
                                    <th>Rezervasyon Yapılan Restaurant</th>
                                    <th>Rezervasyon Yapan Telefon</th>
                                    <th>Rezervasyon Yapan E-Mail</th>
                                    <th>Detay</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var rezervationVM in Model.BookTableClosedRezervations)
                                {
                                <tr>
                                    <td>@rezervationVM.Id</td>
                                    <td>@rezervationVM.RezervationDate - @rezervationVM.RezervationTime</td>
                                    <td>@rezervationVM.NameLastname</td>
                                    <td>@rezervationVM.RezervationStatus</td>
                                    <td>@rezervationVM.RestaurantName</td>
                                    <td>@rezervationVM.PhoneNumber</td>
                                    <td>@rezervationVM.Email</td>
                                    <td>
                                        <a asp-controller="DashboardMasaRezervasyon"
                                           asp-action="Index"
                                           asp-route-masaRezervationId="@rezervationVM.Id">
                                            <i class="bi bi-arrow-right-circle-fill" style="font-size: 2rem; color: cornflowerblue;"></i>
                                        </a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <span class="text-primary">Kayıt Bulunmamaktadır</span>
                    }
                </div>
            </div>
        </div>
</div>
